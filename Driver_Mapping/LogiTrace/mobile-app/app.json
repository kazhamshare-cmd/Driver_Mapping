{
  "expo": {
    "name": "LogiTrace",
    "slug": "logitrace",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#4CAF50"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "jp.co.b19.logitrace",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "GPS追跡機能で走行距離を記録するために位置情報を使用します。",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "バックグラウンドでも走行距離を正確に記録するために位置情報を使用します。",
        "UIBackgroundModes": ["location"]
      }
    },
    "android": {
      "package": "jp.co.b19.logitrace",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#4CAF50"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION"
      ],
      "minSdkVersion": 28
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "バックグラウンドでも走行距離を正確に記録するために位置情報を使用します。"
        }
      ]
    ],
    "extra": {
      "eas": {}
    }
  }
}
